<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreenButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#8BC34A</item>
        <item name="colorButtonNormal">#4CAF50</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="RedButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#F48F36</item>
        <item name="colorButtonNormal">#F44336</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="BlueButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#00BCD4</item>
        <item name="colorButtonNormal">#03A9F4</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
